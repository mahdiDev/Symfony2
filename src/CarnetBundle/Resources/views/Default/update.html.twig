{% extends 'CarnetBundle::base.html.twig' %}

{% block contenupage %}

<form class="form-large" action="{{ path('carnet_contact_ajout') }}"
          method="POST" {{ form_enctype(form) }} novalidate="novalidate">
    <fieldset>
    <legend style="width:305px;">Modifier contact</legend>

        
                
                    
                    <div class="box-content">
                        {{ form_errors(form) }}
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.prenom) }}</span>
                        </div>
                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.nom) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.telephone) }}</span>
                        </div>

                        <div class="col-md-12 form-group clearfix">
                            <span>{{ form_row(form.email) }}</span>
                        </div>

                        <div class="form-group clearfix">
                            <div class="box-content">
                                {{ form_rest(form) }}
                            </div>
                        </div>
                    </div>
                
                <a href="{{ path('carnet_homepage') }}" class="btn btn-md btn-info">
                    <i class="fa fa-arrow-left"></i> Retour
                </a>
                <button type="submit" class="submit btn btn-md btn-success" style="float:right">
                    <i class="fa fa-plus"></i> Enregistrer
                </button>
    
    </fieldset>
    </form>

{%  endblock %}